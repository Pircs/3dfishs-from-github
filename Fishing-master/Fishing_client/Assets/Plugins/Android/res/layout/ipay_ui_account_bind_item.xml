<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tv_account_bind_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="用户名"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_15" />

    <TextView
        android:id="@+id/tv_account_bind_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="绑定时间"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_15" />

    <TextView
        android:id="@+id/tv_account_bind_resource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="绑定来源"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_15" />

    <TextView
        android:id="@+id/tv_account_bind_operate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="操作"
        android:textColor="@color/ipay_color_value_7_5"
        android:textSize="@dimen/ipay_text_size_15" />

</LinearLayout>