<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/ipay_openid_margin_20" >

    <TextView
        android:id="@+id/detail_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_openid_margin_10"
        android:lineSpacingMultiplier="1.5"
        android:singleLine="false"
        android:text="@string/ipay_openid_not_bind_phone_notice"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/ipay_openid_text_size_28" />

    <CheckBox
        android:id="@+id/not_remind_checkbox"
        style="@style/ipay_openid_custom_checkbox_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_openid_margin_20"
        android:checked="false"
        android:paddingLeft="5dp"
        android:text="@string/ipay_openid_not_remind"
        android:textColor="@color/ipay_openid_input_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_openid_margin_20"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel_bind_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/ipay_openid_margin_34"
            android:text="@string/ipay_openid_cancel_this_bind"
            android:textColor="@color/ipay_openid_dialog_btn_textcolor"
            android:textSize="@dimen/ipay_openid_text_size_34" />

        <TextView
            android:id="@+id/bind_soon_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/ipay_openid_margin_20"
            android:text="@string/ipay_openid_bind_soon"
            android:textColor="@color/ipay_openid_dialog_btn_textcolor"
            android:textSize="@dimen/ipay_openid_text_size_34" />
    </LinearLayout>

</LinearLayout>